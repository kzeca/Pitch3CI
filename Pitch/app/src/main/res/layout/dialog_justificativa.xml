<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@drawable/borda_dialog_just">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/justifique_sua_avaliacao"
        android:textColor="@color/azulDebora"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="80">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dialog_justificativa_edt_justificativa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:maxLength="80"
            android:gravity="start|top"
            android:layout_marginTop="5dp"
            android:inputType="textMultiLine"  />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/dialog_justificativa_btn_confirma"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borda_home"
        android:backgroundTint="#4ca6c9"
        android:gravity="center|center_vertical"
        android:text="@string/confirmar"
        android:layout_marginTop="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#FFFFFF"
        android:textSize="23sp"
        android:textStyle="bold"/>
</LinearLayout>